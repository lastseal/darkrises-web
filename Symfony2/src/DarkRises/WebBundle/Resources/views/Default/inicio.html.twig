{% block javascript %}
	{{ parent() }}
	<script type="text/javascript">
		$("#document").ready(
			function(){
				$("#principiante-popup").click(
					function(e){
						$(".shadow").show();
						$(".principiante").show();
					}
				);
			
				$(".inicio-quees").hover(
					function(){
						$(this).addClass("inicio-quees-over").find(".inicio-quees-inside").addClass("red-glow");
					},function(){
						$(this).removeClass("inicio-quees-over").find(".inicio-quees-inside").removeClass("red-glow");
					}
				);
				
				$(".inicio-pack").hover(
					function(){
						$(this).addClass("inicio-pack-over").find(".inicio-pack-inside").addClass("red-glow");
					},function(){
						$(this).removeClass("inicio-pack-over").find(".inicio-pack-inside").removeClass("red-glow");
					}
				);
				
				$(".link-to-login").click(function(){$("#auth-loginlink").css("border", "solid 3px #cfcf74")})
			}
		);
	</script>
