<script src="{{ asset("js/facebook.js") }}" type="text/javascript"></script>
<script src="http://code.jquery.com/jquery-1.7.2.min.js" type="text/javascript"></script>
<script src="{{ asset("js/jquery.xdomainajax.js") }}" type="text/javascript"></script>
<script type="text/javascript">
	jQuery(document).ready(
		function(){
		
			if(actualPage != "/eventos/"){
				date = new Date();
				hora = date.getHours();
				
				if(hora >= 8 && hora < 14)
					$("body").css("background", 'url("{{ asset("/img/fondos/dia.png") }}") no-repeat center top #000000');
				else if(hora >= 14 && hora < 22)
					$("body").css("background", 'url("{{ asset("/img/fondos/tarde.png") }}") no-repeat center top #000000');
				else
					$("body").css("background", 'url("{{ asset("/img/fondos/noche.png") }}") no-repeat center top #000000');
			}
			
			jQuery("#idioma").click(
				function(){
					select = jQuery("#select-idioma");
					if(select.css("display") == "block"){
						select.hide();
						$("#flecha-idioma").removeClass("flecha-arriba").addClass("flecha-abajo");
					}else{
						select.show();
						$("#flecha-idioma").addClass("flecha-arriba").removeClass("flecha-abajo");
					}
				}
			);
			
			jQuery("#select-idioma").click(function(){jQuery("#idioma").click();});
			
			$(".ir-al-juego").hover(
				function(){$(".proximamente").show()},
				function(){$(".proximamente").hide()}
			);
			
			$(".idioma-english").hover(function(){$(this).addClass("idioma-english-hover")},function(){$(this).removeClass("idioma-english-hover")});
			$(".idioma-spanish").hover(function(){$(this).addClass("idioma-spanish-hover")},function(){$(this).removeClass("idioma-spanish-hover")});
			
			$(".button-inicio").hover(
				function(){
					$(this).addClass("button-inicio-on").find(".menu-buttons .menu-buttons-inside").addClass("white");
				},
				function(){
					$(this).removeClass("button-inicio-on").find(".menu-buttons .menu-buttons-inside").removeClass("white");
				}
			);
			
			$(".button-guia").hover(
				function(){
					$(this).addClass("button-guia-on").find(".menu-buttons .menu-buttons-inside").addClass("white");
				},
				function(){
					$(this).removeClass("button-guia-on").find(".menu-buttons .menu-buttons-inside").removeClass("white");
				}
			);
			
			$(".button-media").hover(
				function(){
					$(this).addClass("button-media-on").find(".menu-buttons .menu-buttons-inside").addClass("white");
				},
				function(){
					$(this).removeClass("button-media-on").find(".menu-buttons .menu-buttons-inside").removeClass("white");
				}
			);
			
			$(".button-eventos").hover(
				function(){
					$(this).addClass("button-eventos-on").find(".menu-buttons .menu-buttons-inside").addClass("white");
				},
				function(){
					$(this).removeClass("button-eventos-on").find(".menu-buttons .menu-buttons-inside").removeClass("white");
				}
			);
			
			$(".shadow-inside").prepend("<div class='close'></div>");
			
			$(".shadow").height($("body").height()).click(
				function(){
					$(this).hide();
					$(".shadow-inside").hide();
				}
			);
			
			
			$(".close").click(
				function(){
					$(".shadow").hide();
					$(".shadow-inside").hide();
				}
			).hover(
				function(){$(this).addClass("close-over")},
				function(){$(this).removeClass("close-over")}
			);
		}
	);
</script>