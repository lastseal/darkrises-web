 {% endblock %}

{% block javascript %}

	{{ parent() }}
	<script type="text/javascript">
		$("#document").ready(
			function(){
				$(".ver-mas").hover(function(){$(this).addClass("ver-mas-hover");},function(){$(this).removeClass("ver-mas-hover");});
			}
		);
	</script>
{% endblock %}
